---
const { title, children } = Astro.props;
---

<!doctype html>
<html lang="es" class="font-family: system-ui, sans-serif">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="margin: 0 width: 100% height: 100% bg-black">
    <header>
      <nav
        class="fixed top-0 left-0 w-full flex justify-center backdrop-blur-sm space-x-6 py-4 z-50"
      >
        <a
          href="#sobremi"
          class="text-white hover:text-blue-500 transition-colors duration-300"
          >Sobre mi</a
        >
        <a
          href="#formacion"
          class="text-white hover:text-blue-500 transition-colors duration-300"
          >Formaci√≥n</a
        >
        <a
          href="#proyectos"
          class="text-white hover:text-blue-500 transition-colors duration-300"
          >Proyectos</a
        >
        <a
          href="#contacto"
          class="text-white hover:text-blue-500 transition-colors duration-300"
          >Contacto</a
        >
      </nav>
    </header>

    <main style="padding-top: 8rem;">
      <div class="text-center">
        <h1 class="text-5xl font-extrabold">
          <span class="text-blue-500">Software Developer</span>
          <span class="block text-white">Lautaro Rodriguez Brown</span>
        </h1>

        <hr class="border-t-2 border-gray-400 my-8 mx-auto w-full" />
        <div>
          {children}
        </div>
        <hr class="border-t-2 border-gray-400 my-8 mx-auto w-full" />
      </div>
    </main>
  </body>
</html>
