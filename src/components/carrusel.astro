---
import "@splidejs/splide/css";
import Button from "@components/Button.astro";
---

<div class="splide" role="group">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide">
        <div id="sobre-mi" class="pb-12 text-white">
          <h1 class="text-xl font-bold">Sobre mi</h1>
          <p>blablabla</p>
        </div>
      </li>
      <li class="splide__slide">
        <div id="formacion" class="pb-12 text-white">
          <h1 class="text-xl font-bold">Formación</h1>
          <p>blablabla</p>
        </div>
      </li>
      <li class="splide__slide">
        <div id="proyectos" class="pb-12 text-white">
          <h1 class="text-xl font-bold">Proyectos</h1>
          <p>blablabla</p>
        </div>
      </li>
      <li class="splide__slide">
        <div id="contacto" class="pb-12 text-white">
          
          <h1 class="text-xl font-bold mb-2">Contacto</h1>

          <div class="inline-grid grid-cols-2 gap-2">
            <Button name="Gmail" link="mailto:lautarobrown@gmail.com" icon="/Gmail_Icon.svg"/>
            <Button name="Github" link="https://github.com/LautaRB" icon="/Github_Icon.svg"/>
            <Button name="Whatsapp" link="https://wa.me/541133283830" icon="/Whatsapp_Icon.svg"/> 
          </div>

        </div>
      </li>
    </ul>

    <script>
      import Splide from "@splidejs/splide";
      let splide = new Splide(".splide", {
        type: "loop",
        padding: "5rem",
        arrows: false,
      });

      splide.mount();

      // Maneja los clics del navbar
      document.querySelectorAll(".nav-link").forEach((link) => {
        link.addEventListener("click", (event) => {
          event.preventDefault(); // Evita el comportamiento por defecto del enlace

          // Índice del slide correspondiente
          const targetIndex = parseInt(
            link.getAttribute("data-slide") ?? "0",
            10,
          );

          // Navega al slide correspondiente
          splide.go(targetIndex);
        });
      });
    </script>
  </div>
</div>
