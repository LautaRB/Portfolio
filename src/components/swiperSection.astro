---
import Swiper from "swiper";
import { Navigation, Pagination } from "swiper/modules";
import "swiper/css/navigation";
import "swiper/css/pagination";
import "swiper/css";
---

<div class="swiper">
  <div class="swiper-wrapper">
    <div id="sobre-mi" class="swiper-slide text-white">
      <h1>Sobre mí</h1>
      <p>Información sobre mí...</p>
    </div>

    <div id="formacion" class="swiper-slide text-white">
      <h1>Formación</h1>
      <p>Detalles sobre mi formación...</p>
    </div>

    <div id="proyectos" class="swiper-slide text-white">
      <h1>Proyectos</h1>
      <p>Proyectos en los que he trabajado...</p>
    </div>

    <div id="contacto" class="swiper-slide text-white">
      <h1>Contacto</h1>
      <p>Cómo puedes contactarme...</p>
    </div>
  </div>

  <!-- Paginación -->
  <div class="swiper-pagination"></div>

  <!-- Navegación (flechas) -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>

<script type="module">
  const swiper = new Swiper(".swiper", {
    modules: [Navigation, Pagination], // Asegúrate de incluir los módulos
    grabCursor: true,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true, // Permitir clics en los puntos de paginación
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>
