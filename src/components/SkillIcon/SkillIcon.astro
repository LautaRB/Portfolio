---
interface Props {
  iconUrl: string;
  caption?: string;
  size?: number;
}

const { iconUrl ,caption, size = 12 } = Astro.props;
---

<figure class="flex flex-col items-center">
  <img
    src=`https://skillicons.dev/icons?i=${iconUrl}`
    class=`w-${size} h-${size}`
  />
  <figcaption class="mt-2 text-sm text-gray-500">
    {caption}
  </figcaption>
</figure>
